          - zabbix-apache-conf
          - zabbix-sql-scripts
        state: present

    - name: Create Zabbix database
      become_user: postgres
      postgresql_db:
        name: zabbix
        encoding: UTF8
        lc_collate: C
        lc_ctype: C

    - name: Create Zabbix user
      become_user: postgres
      postgresql_user:
        db: zabbix
        name: zabbix
        password: zabbix

    - name: Import Zabbix schema
      become_user: postgres
      postgresql_db:
        name: zabbix
        state: dump
        target: /tmp/schema.sql
        login_host: localhost
        login_user: zabbix
        login_password: zabbix
        owner: zabbix

    - name: Import Zabbix data
      become_user: postgres
      postgresql_db:
        name: zabbix
        state: restore
        target: /usr/share/zabbix/data/data.sql
        login_host: localhost
        login_user: zabbix
        login_password: zabbix

    - name: Set Zabbix database configuration
      blockinfile:
        block: |
          DBHost=localhost
          DBName=zabbix
          DBUser=zabbix
          DBPassword=zabbix
        dest: /etc/zabbix/zabbix_server.conf
        state: present
        mode: '0644'

    - name: Enable and start Zabbix Server
      systemd:
        name: zabbix-server
        state: started
        enabled: yes

    - name: Add Kibana repository
      apt_key:
        url: https://artifacts.elastic.co/GPG-KEY-elasticsearch
        state: present

    - name: Add Kibana repository
      apt_repository:
        filename: elastic.list
        repo: "deb https://artifacts.elastic.co/packages/oss-7.x/apt stable main"
        state: present

    - name: Install Kibana
      apt:
        name: kibana-oss
        state: present

    - name: Set Kibana configuration
      blockinfile:
        block: |
          server.host: "0.0.0.0"
          elasticsearch.hosts: ["http://localhost:9200"]
          elasticsearch.username: "elastic"
          elasticsearch.password: "password"
        dest: /etc/kibana/kibana.yml
        state: present
        mode: '0644'

    - name: Enable and start Kibana service
      systemd:
        name: kibana
        state: started
        enabled: yes

    - name: Add Grafana repository
      apt_key:
        url: https://packages.grafana.com/gpg.key
        state: present

    - name: Add Grafana repository
      apt_repository:
        filename: grafana.list
        repo: "deb https://packages.grafana.com/oss/deb stable main"
        state: present

    - name: Install Grafana
      apt:
        name: grafana
        state: present

    - name: Set Grafana configuration
      blockinfile:
        block: |
          [server]
          http_port = 3000
          domain = localhost

          [database]
          type = postgres
          host = 10.8.0.6:5432
          name = zabbix
          user = zabbix
          password = zabbix

          [auth.anonymous]
          enabled = true

          [auth.basic]
          enabled = true
          #default admin user is admin/admin
          #as soon as possible you must change password to be under the security policies
          ;admin_user = admin
          ;admin_password = admin
        dest: /etc/grafana/grafana.ini
        state: present
        mode: '0644'

    - name: Enable and start Grafana service
      systemd:
        name: grafana-server
        state: started
        enabled: yes
```

